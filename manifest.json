{
    "manifest_version": 2,
    "name": "Bookmarks Sync",
    "version": "1.0",
    "description": "Sync bookmarks to REST endpoint",
    "homepage_url": "https://github.com/showerbeer/bookmarks-syn-ext",
    "icons": {
        "48": "icons/star-filled.png",
        "96": "icons/star-filled@2x.png"
    },

    "permissions": [
        "bookmarks",
        "storage"
    ],

    "options_ui": {
        "page": "options.html"
    },

    "browser_action": {
        "default_icon": "icons/star-filled@2x.png",
        "default_title": "Sync it",
        "default_popup": "options.html",
        "browser_style": true
    },

    "background": {
        "page": "background.js"
    }
}